<?xml version="1.0" ?>
<widgets>
    <featuredcategory_extended type="meigeewidgets/featuredcategory">
        <name>Meigee/Featured Category Extended</name>
        <description type="desc">Adds a list of products from featured category with advanced parameters</description>
        <parameters>
            <featured_category>
                <visible>1</visible>
                <label>Featured Category</label>
                <required>1</required>
                <type>label</type>
                <helper_block>
                    <type>adminhtml/catalog_category_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Category...</open>
                        </button>
                    </data>
                </helper_block>
            </featured_category>
            <template translate="label">
                <label>Frontend Template</label>
				<description>If chosen slider make sure you have at least 5 products to display, otherwise widget won't be displayed.</description>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <source_model>meigeewidgets/templates</source_model>
            </template>
            <block_position>
                <label>Position of static block</label>
                <description>Allows to put static block on the right or left of the slider</description>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <source_model>meigeewidgets/blockposition</source_model>
                <value>0</value>
                <depends>
                    <template><value>meigee/meigeewidgets/slider.phtml</value></template>
                </depends>
            </block_position>
            <static_block>
                <label>Name of static block</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
                <value></value>
                <depends>
                    <template><value>meigee/meigeewidgets/slider.phtml</value></template>
                </depends>
            </static_block>
            <products_amount>
                <label>Amount of Products to Display</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>10</value>
            </products_amount>
			<visible_products>
                <label>Amount of Visible Products</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <source_model>meigeewidgets/visible</source_model>
				<value>4</value>
				<depends>
                    <block_position>
                        <value>0</value>
                    </block_position>
                </depends>
            </visible_products>
            <column_count>
                <label>Columns count</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>3</value>
                <depends>
                    <template><value>meigee/meigeewidgets/grid.phtml</value></template>
                </depends>
            </column_count>
            <autoSlide translate="label">
                <label>Auto Slide</label>
                <description>Enables automatic cycling through slides</description>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <value>0</value>
                <depends>
                    <template>
                        <value>meigee/meigeewidgets/slider.phtml</value>
                    </template>
                </depends>
            </autoSlide>
            <autoSlideTimer translate="label">
                <label>Auto Slide Timer</label>
                <description>The time (in milliseconds) that a slide will wait before automatically navigating to the next slide</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <depends>
                    <template>
                        <value>meigee/meigeewidgets/slider.phtml</value>
                    </template>
                    <autoSlide>
                        <value>1</value>
                    </autoSlide>
                </depends>
            </autoSlideTimer>
            <autoSlideTransTimer translate="label">
                <label>Auto Slide Trans Timer</label>
                <description>The time (in milliseconds) required for all automatic animations to move between slides</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <depends>
                    <template>
                        <value>meigee/meigeewidgets/slider.phtml</value>
                    </template>
                    <autoSlide>
                        <value>1</value>
                    </autoSlide>
                </depends>
            </autoSlideTransTimer>
			<widget_id translate="label">
                <label>Widget ID</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <source_model>meigeewidgets/number</source_model>
                <depends>
                    <template>
                        <value>meigee/meigeewidgets/slider.phtml</value>
                    </template>
                </depends>
                <description>Generated automatically</description>
            </widget_id>
            <cache_lifetime translate="label description">
                <label>Cache Lifetime (Seconds)</label>
                <description>86400 by default, if not set. To refresh instantly, Clear the Blocks HTML Output Cache.</description>
                <visible>1</visible>
                <type>text</type>
            </cache_lifetime>
        </parameters>
    </featuredcategory_extended>
    
    
